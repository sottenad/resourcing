<h1>Listing subscription_types</h1>

<table>
  <thead>
    <tr>
      <th>Subscription name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscription_types.each do |subscription_type| %>
      <tr>
        <td><%= subscription_type.subscription_name %></td>
        <td><%= subscription_type.price %></td>
        <td><%= link_to 'Show', subscription_type %></td>
        <td><%= link_to 'Edit', edit_subscription_type_path(subscription_type) %></td>
        <td><%= link_to 'Destroy', subscription_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription types', new_subscription_type_path %>
